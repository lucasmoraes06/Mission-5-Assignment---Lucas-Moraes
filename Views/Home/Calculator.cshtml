@{
    ViewData["Title"] = "Tutoring Calculator";
}

<h1 class="display-6 fw-bold">Soccer Tutoring Calculator</h1>
<p class="text-muted">
    Enter the number of hours you want help with (skills, strategy, drills, positioning, etc.).
</p>

<div class="row g-4">
    <div class="col-md-7 col-lg-6">
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="mb-3">
                    <label for="hours" class="form-label">Hours needed</label>
                    <input id="hours" type="number" class="form-control" placeholder="e.g., 2" min="0" step="0.5" />
                    <div id="hoursError" class="text-danger small mt-1 d-none">
                        Please enter a positive number of hours.
                    </div>
                </div>

                <div class="mb-3">
                    <label for="rate" class="form-label">My rate (per hour)</label>
                    <input id="rate" type="text" class="form-control" value="$35.00" readonly />
                </div>

                <button id="calcBtn" class="btn btn-success w-100">Calculate Total</button>

                <hr />

                <div class="mb-3">
                    <label for="total" class="form-label">Total</label>
                    <input id="total" type="text" class="form-control" readonly placeholder="$0.00" />
                </div>

                <a class="btn btn-outline-secondary w-100" asp-controller="Home" asp-action="Index">
                    Back to Home
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="~/js/calculator.js" asp-append-version="true"></script>
}
